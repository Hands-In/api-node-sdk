{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "build",
    "rootDir": "./src",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build/**/*"]
}
